#!/usr/bin/env bash

# A small utility for previewing ripgrep results. Mostly copied 
# from FZF's preview.sh.

IFS=':' read -r -a INPUT <<< "$1"

FILE=${INPUT[0]}
CENTER=${INPUT[1]}

CENTER=${CENTER/[^0-9]*/}

bat --style="${BAT_STYLE:-numbers}" --color always --pager never --highlight-line=$CENTER "$FILE"
